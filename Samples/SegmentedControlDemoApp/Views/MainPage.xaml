<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SegmentedControlDemoApp.Controls"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:SegmentedControlDemoApp.ViewModels"
    x:Class="SegmentedControlDemoApp.Views.MainPage"
    Title="SegmentedControl .NET MAUI"
    x:DataType="vm:MainViewModel">

    <ContentPage.Resources>
        <ResourceDictionary />
    </ContentPage.Resources>

    <ContentPage.Behaviors>
        <mct:EventToCommandBehavior
            Command="{Binding AppearingCommand}"
            EventName="Appearing" />
    </ContentPage.Behaviors>

    <ScrollView>
        <VerticalStackLayout
            Padding="16"
            Spacing="16"
            VerticalOptions="Start">

            <Grid
                ColumnDefinitions="Auto, *"
                ColumnSpacing="10">
                <Image
                    Grid.Column="0"
                    Source="dotnet_bot.png"
                    HeightRequest="100" />
                <Label
                    Grid.Column="1"
                    Text="MAUI sample app for SegmentedControl demonstration. This sample app is used to demonstrate and test the main features of the nuget package Plugin.SegmentedControl.Maui." />
            </Grid>

            <controls:DividerLine />

            <Label
                Style="{StaticResource Heading1LabelStyle}"
                Text="Pages" />
            <Button
                Command="{Binding NavigateToPageCommand}"
                CommandParameter="TestPage"
                Text="TestPage"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
