<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:s="http://plugin.segmentedControl.maui"
    xmlns:vm="clr-namespace:SegmentedControlDemoApp.ViewModels"
    x:Class="SegmentedControlDemoApp.Views.Test1Page"
    Title="XAML &amp; Code-behind"
    x:DataType="vm:Test1ViewModel">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="20"
            VerticalOptions="Start">

            <Label
                Text="Example with segment options defined in XAML. All style properties are left with default values." />
            
            <s:SegmentedControl
                OnElementChildrenChanging="SegmentedControl_OnElementChildrenChanging"
                OnSegmentSelected="SegmentedControl_OnSegmentSelected"
                WidthRequest="160"
                HorizontalOptions="Start">
                <s:SegmentedControlOption Text="Tab1" />
                <s:SegmentedControlOption Text="Tab2" />
                <s:SegmentedControlOption Text="Tab3" />
            </s:SegmentedControl>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>