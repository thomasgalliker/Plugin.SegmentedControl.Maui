<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SegmentedControlDemoApp.ViewModels"
    x:Class="SegmentedControlDemoApp.Views.MedicationDetailPage"
    x:DataType="vm:MedicationDetailViewModel"
    Title="MedicationDetailPage">
    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="20">
        <Label Text="MedicationDetailPage" />
        <Button
            Command="{Binding PopToRootCommand}"
            Text="PopToRootAsync"/>
    </VerticalStackLayout>
</ContentPage>